{
  "name": "evn",
  "version": "1.0.0",
  "description": "Splitwise without the paywall. Track group expenses, settle up with one tap.",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "mobile": "cd apps/mobile && npm run start",
    "mobile:ios": "cd apps/mobile && npm run ios",
    "mobile:android": "cd apps/mobile && npm run android",
    "api": "cd apps/api && npm run start:dev",
    "web": "cd apps/web && npm run dev",
    "test": "turbo run test"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.5.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
